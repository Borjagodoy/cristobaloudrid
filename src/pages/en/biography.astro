---
import Layout from '../../layouts/Layout.astro';

const milestones = [
    { year: 1825, title: "Birth in Badajoz", desc: "Son of musicians, he begins his training under his father's tutelage in the military band." },
    { year: 1844, title: "Arrival in Madrid", desc: "He settles in the capital, soon standing out as a virtuoso salon pianist." },
    { year: 1851, title: "Teatro de la Zarzuela", desc: "He founds, together with Barbieri and Gaztambide, the theater that would change Spain's lyric history." },
    { year: 1870, title: "The Siege of Zaragoza", desc: "He premieres his magnum opus, establishing himself as a benchmark of musical nationalism." },
    { year: 1877, title: "Death", desc: "He dies unexpectedly at the Teatro Real in Madrid, leaving an irreplaceable void." }
];
---

<Layout title="Biography - Cristobal Oudrid" description="Chronology of Cristobal Oudrid's life." lang="en">
    <main class="py-24 px-6 max-w-4xl mx-auto">
        <header class="mb-24 text-center">
            <h1 class="text-5xl md:text-7xl font-serif font-bold text-accent-red mb-6">Biography</h1>
            <p class="text-xl font-light tracking-wide text-ink/70">A life dedicated to art and Spain.</p>
        </header>

        <div class="relative border-l-2 border-accent-gold/30 ml-4 md:ml-0 md:pl-0 space-y-16">
            {milestones.map((item, index) => (
                <div 
                    class="relative pl-12 md:pl-0 md:grid md:grid-cols-12 md:gap-12 items-center group animate-fade-in-up opacity-0"
                    style={`animation-delay: ${index * 150}ms`}
                >
                    <!-- Dot -->
                    <div class="absolute left-[-5px] top-2 w-3 h-3 rounded-full bg-accent-gold md:left-auto md:right-[-6px] md:top-auto md:hidden"></div>
                    
                    <!-- Year (Left on Desktop) -->
                    <div class="hidden md:block md:col-span-5 text-right">
                        <span class="text-6xl font-serif font-bold text-accent-gold/20 group-hover:text-accent-red/20 transition-colors duration-500">
                            {item.year}
                        </span>
                    </div>

                    <!-- Divider Dot (Desktop) -->
                     <div class="hidden md:block col-span-2 relative h-full flex justify-center">
                         <div class="w-4 h-4 rounded-full bg-accent-gold border-4 border-paper z-10"></div>
                     </div>

                    <!-- Content (Right on Desktop) -->
                    <div class="md:col-span-5">
                        <span class="md:hidden text-4xl font-serif font-bold text-accent-gold/20 mb-2 block">{item.year}</span>
                        <h3 class="text-2xl font-serif font-bold text-ink mb-2">{item.title}</h3>
                        <p class="font-light text-ink/80 leading-relaxed">{item.desc}</p>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
