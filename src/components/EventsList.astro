---
interface Event {
    date: string;
    city: string;
    venue: string;
    ticketLink?: string;
}

interface Props {
    events: Event[];
    lang: "es" | "en";
}

const { events, lang } = Astro.props;

const noEventsMessage =
    lang === "es"
        ? "Pronto anunciaremos nuevas fechas."
        : "New dates to be announced soon.";

const listenOnMessage =
    lang === "es"
        ? "Mientras tanto, escucha su m√∫sica en:"
        : "In the meantime, listen on:";

const buyTickets = lang === "es" ? "Comprar Entradas" : "Buy Tickets";
---

<div class="space-y-4">
    {
        events.length > 0 ? (
            <ul class="space-y-4">
                {events.map((event) => (
                    <li class="flex flex-col md:flex-row md:items-center justify-between p-6 bg-paper border border-ink/10 hover:border-accent-gold/50 transition-colors rounded-sm shadow-sm group">
                        <div class="mb-4 md:mb-0">
                            <div class="text-accent-red font-bold font-serif text-xl mb-1">
                                {event.date}
                            </div>
                            <div class="text-ink font-bold text-lg">
                                {event.city}
                            </div>
                            <div class="text-ink/60 font-light">
                                {event.venue}
                            </div>
                        </div>
                        {event.ticketLink && (
                            <a
                                href={event.ticketLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-block px-6 py-3 bg-ink text-paper font-bold font-serif text-sm uppercase tracking-wider hover:bg-accent-gold hover:text-ink transition-colors"
                            >
                                {buyTickets}
                            </a>
                        )}
                    </li>
                ))}
            </ul>
        ) : (
            <div class="text-center py-12 bg-paper/50 border border-ink/5 rounded-sm">
                <p class="text-xl font-serif text-ink mb-6">
                    {noEventsMessage}
                </p>
                <p class="text-sm font-light text-ink/60 mb-6">
                    {listenOnMessage}
                </p>
                <div class="flex justify-center gap-4">
                    <a
                        href="#"
                        class="text-ink hover:text-accent-green transition-colors"
                        aria-label="Spotify"
                    >
                        <svg
                            class="w-8 h-8"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141 4.38-1.38 9.841-.72 13.441 1.5.419.18.6.78.3 1.32zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
                        </svg>
                    </a>
                    <a
                        href="#"
                        class="text-ink hover:text-accent-red transition-colors"
                        aria-label="Apple Music"
                    >
                        <svg
                            class="w-8 h-8"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm4.5 9.074v1.517c0 .17-.03.25-.132.324-.263.19-.77.164-1.025.163h-.066v5.885c0 2.228-2.613 2.826-4.143 1.944-1.53-1.082-.6-3.494 1.705-2.793v-4.01c-.996.38-2.185.748-3.05 1.1-.06.024-.093.072-.093.136v4.992c0 2.128-2.618 2.502-3.951 1.527-1.332-.975-.411-3.411 1.841-2.65v-6.38c0-.083.05-.157.127-.187l8.65-3.52c.092-.037.136-.007.136.052v1.9z" />
                        </svg>
                    </a>
                </div>
            </div>
        )
    }
</div>
